<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.jhnbos.meetmeapp.Event">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Create Event"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:id="@+id/event_titleView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:ems="10"
        android:layout_below="@+id/event_titleView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/titleField"
        android:inputType="textCapWords" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/titleField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spacer1" />

    <TextView
        android:text="Start Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startView"
        android:layout_below="@+id/spacer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <DatePicker
        android:layout_height="40dp"
        android:id="@+id/datePickerStart"
        android:layout_below="@+id/startView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:calendarViewShown="false"
        android:spinnersShown="true"
        android:clickable="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="200dp" />

    <TimePicker
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:timePickerMode="spinner"
        android:id="@+id/timePickerStart"
        android:layout_below="@+id/startView"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/datePickerStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spacer2" />

    <TextView
        android:text="End Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:id="@+id/endView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/addEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text="Add Event"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <DatePicker
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/datePickerEnd"
        android:layout_below="@+id/endView"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:calendarViewShown="false"
        android:spinnersShown="true"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TimePicker
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/timePickerEnd"
        android:layout_below="@+id/endView"
        android:clickable="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:timePickerMode="spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
