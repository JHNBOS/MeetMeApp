<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.jhnbos.meetmeapp.Settings">

    <TextView
        android:text="Color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/colorTextView"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pick Color"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@+id/colorTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/colorButton2"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/colorEditText2"
        android:inputType="text"
        android:singleLine="true"
        android:layout_below="@+id/colorTextView"
        android:layout_toRightOf="@+id/colorButton2"
        android:layout_toEndOf="@+id/colorButton2"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="18dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_below="@+id/colorEditText2"
        android:id="@+id/spacer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp" />

    <TextView
        android:text="Old Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:id="@+id/oldPasswordTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/oldPasswordTextView"
        android:id="@+id/oldPasswordEditText"
        android:layout_alignLeft="@+id/colorButton2"
        android:layout_alignStart="@+id/colorButton2"
        android:layout_alignRight="@+id/colorEditText2"
        android:layout_alignEnd="@+id/colorEditText2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/oldPasswordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spacer2" />

    <TextView
        android:text="New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:id="@+id/newPasswordTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/newPasswordTextView"
        android:id="@+id/newPasswordEditText"
        android:layout_alignLeft="@+id/oldPasswordEditText"
        android:layout_alignStart="@+id/oldPasswordEditText"
        android:layout_alignRight="@+id/oldPasswordEditText"
        android:layout_alignEnd="@+id/oldPasswordEditText" />

    <Space
        android:layout_width="match_parent"
        android:layout_below="@+id/newPasswordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spacer3"
        android:layout_height="150dp" />

    <Button
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/updateButton"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />
</RelativeLayout>
